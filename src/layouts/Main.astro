---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  pageTitle?: string;
  pageDesc?: string;
}

const { pageTitle, pageDesc } = Astro.props;
---

<Header />
<main id="main-content" class="mx-auto w-full flex-1 px-4 pb-12" style="max-width:1020px">
  {pageTitle && (
    <div class="mb-8 mt-8">
      <h1 class="text-2xl font-semibold tracking-wide sm:text-3xl">{pageTitle}</h1>
      {pageDesc && (
        <p class="mt-2 opacity-70">{pageDesc}</p>
      )}
    </div>
  )}
  <slot />
</main>
<Footer />
