---
interface Props {
  currentPage: number;
  totalPages: number;
  prevUrl?: string;
  nextUrl?: string;
}

const { currentPage, totalPages, prevUrl, nextUrl } = Astro.props;
---

{totalPages > 1 && (
  <nav class="mt-8 flex items-center justify-between" aria-label="Pagination">
    {prevUrl ? (
      <a
        href={prevUrl}
        class="flex items-center gap-1 text-sm opacity-70 hover:text-accent transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
        Previous
      </a>
    ) : <span />}

    <span class="text-sm opacity-70">
      Page {currentPage} of {totalPages}
    </span>

    {nextUrl ? (
      <a
        href={nextUrl}
        class="flex items-center gap-1 text-sm opacity-70 hover:text-accent transition-colors"
      >
        Next
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
      </a>
    ) : <span />}
  </nav>
)}
