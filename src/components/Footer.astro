---
import { SITE } from "@/config";
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";
---

<footer class="mt-auto w-full">
  <Hr noPadding />
  <div class="mx-auto max-w-3xl flex flex-col items-center justify-between px-4 py-6 sm:flex-row-reverse sm:py-4">
    <Socials />
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <span class="opacity-70">&copy; {new Date().getFullYear()} {SITE.author}</span>
    </div>
  </div>
</footer>
