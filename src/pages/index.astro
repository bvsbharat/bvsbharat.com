---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Hr from "@/components/Hr.astro";
import Card from "@/components/Card.astro";
import Socials from "@/components/Socials.astro";
import { SITE } from "@/config";
import { SOCIALS } from "@/consts";
import { getCollection } from "astro:content";
import { getSortedPosts } from "@/utils/getSortedPosts";

const posts = await getCollection("blog");
const sortedPosts = getSortedPosts(posts, { excludeHackathons: false });
const featuredPosts = sortedPosts.filter((p) => p.data.featured);
const recentPosts = sortedPosts.filter((p) => !p.data.featured);

const featuredHackathons = getSortedPosts(posts, { excludeHackathons: false })
  .filter((p) => p.data.featured && p.data.tags.includes("hackathon"));
---

<Layout>
  <Header />
  <main id="main-content" class="flex-1">
    <section id="hero" class="pt-6 pb-4">
      <div class="flex flex-row items-start gap-4">
        <div class="flex flex-col items-center gap-2 flex-shrink-0">
          <a href="/about" class="block group">
            <img
              src="/images/profile.png"
              alt={SITE.author}
              class="w-20 h-20 sm:w-40 sm:h-40 rounded-full object-cover transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl"
            />
          </a>
          {SOCIALS.filter((s) => s.active).length > 0 && (
            <div class="hidden sm:flex flex-col items-center gap-2">
              <Socials />
            </div>
          )}
        </div>
        <div class="flex-1 min-w-0">
          <h1 class="my-1 inline-block text-xl font-bold sm:my-4 sm:text-3xl">
            Hi, I'm <a href="https://x.com/bvsbharat" target="_blank" rel="noopener noreferrer" class="text-accent hover:underline decoration-dashed underline-offset-4">@bvsbharat</a>.
          </h1>
          <p class="text-sm opacity-80 sm:text-base">
            {SITE.desc}
          </p>
          {SOCIALS.filter((s) => s.active).length > 0 && (
            <div class="mt-3 flex flex-row items-center sm:hidden">
              <Socials />
            </div>
          )}
        </div>
      </div>
    </section>

    <Hr />

    {featuredPosts.length > 0 && (
      <>
        <section id="featured" class="pt-8 pb-4">
          <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
          <ul>
            {featuredPosts.slice(0, SITE.featuredPerIndex).map((post) => <Card post={post} enableTransition />)}
          </ul>
        </section>
        {recentPosts.length > 0 && <Hr />}
      </>
    )}

    {recentPosts.length > 0 && (
      <section id="recent-posts" class="pt-8 pb-4">
        <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
        <ul>
          {recentPosts.slice(0, SITE.postPerIndex).map((post) => <Card post={post} enableTransition />)}
        </ul>
      </section>
    )}

    {sortedPosts.length > SITE.postPerIndex && (
      <div class="my-8 text-center">
        <a
          href="/posts"
          class="inline-flex items-center gap-1 text-accent decoration-dashed underline-offset-4 hover:underline font-medium"
        >
          All Posts
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
        </a>
      </div>
    )}

    {featuredHackathons.length > 0 && (
      <>
        <Hr />
        <section id="featured-hackathons" class="pt-8 pb-4">
          <h2 class="text-2xl font-semibold tracking-wide">Featured Hackathons</h2>
          <ul>
            {featuredHackathons.map((post) => <Card post={post} />)}
          </ul>
        </section>
        <div class="my-8 text-center">
          <a
            href="/hackathons"
            class="inline-flex items-center gap-1 text-accent decoration-dashed underline-offset-4 hover:underline font-medium"
          >
            All Hackathons
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
          </a>
        </div>
      </>
    )}
  </main>
  <Footer />
</Layout>
