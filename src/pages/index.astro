---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Hr from "@/components/Hr.astro";
import Card from "@/components/Card.astro";
import Socials from "@/components/Socials.astro";
import { SITE } from "@/config";
import { SOCIALS } from "@/consts";
import { getCollection } from "astro:content";
import { getSortedPosts } from "@/utils/getSortedPosts";

const posts = await getCollection("blog");
const sortedPosts = getSortedPosts(posts, { excludeHackathons: false });
const nonHackathonPosts = sortedPosts.filter((p) => !p.data.tags.includes("hackathon"));
const featuredPosts = nonHackathonPosts.filter((p) => p.data.featured);
const recentPosts = nonHackathonPosts.filter((p) => !p.data.featured);
---

<Layout>
  <Header />
  <main id="main-content" class="flex-1">
    <section id="hero" class="pt-6 pb-4">
      {/* Mobile: profile + name on top row, content full width below */}
      <div class="sm:hidden">
        <div class="flex items-center gap-3 mb-3">
          <a href="/about" class="block flex-shrink-0 group">
            <img
              src="/images/profile.png"
              alt={SITE.author}
              class="w-12 h-12 rounded-full object-cover"
            />
          </a>
          <h1 class="text-lg font-light">
            Hi, I'm <a href="https://x.com/bvsbharat" target="_blank" rel="noopener noreferrer" class="text-accent-link hover:underline decoration-dashed underline-offset-4">@bvsbharat</a>.
          </h1>
        </div>
        <p class="text-sm opacity-80">
          {SITE.desc}
        </p>
        {SOCIALS.filter((s) => s.active).length > 0 && (
          <div class="mt-3 flex flex-row items-center">
            <Socials />
          </div>
        )}
      </div>
      {/* Desktop: side-by-side layout */}
      <div class="hidden sm:flex flex-row items-start gap-4">
        <a href="/about" class="block flex-shrink-0 group">
          <img
            src="/images/profile.png"
            alt={SITE.author}
            class="w-40 h-40 rounded-full object-cover transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl"
          />
        </a>
        <div class="flex-1 min-w-0">
          <h1 class="my-4 inline-block text-3xl font-light">
            Hi, I'm <a href="https://x.com/bvsbharat" target="_blank" rel="noopener noreferrer" class="text-accent-link hover:underline decoration-dashed underline-offset-4">@bvsbharat</a>.
          </h1>
          <p class="text-base opacity-80">
            {SITE.desc}
          </p>
          {SOCIALS.filter((s) => s.active).length > 0 && (
            <div class="mt-3 flex flex-row items-center">
              <Socials />
            </div>
          )}
        </div>
      </div>
    </section>

    {featuredPosts.length > 0 && (
      <>
        <section id="featured" class="pt-8 pb-4">
          <h2 class="text-xs font-medium uppercase tracking-[0.2em] opacity-50 mb-4" style="font-family: system-ui, -apple-system, sans-serif;">Featured</h2>
          <ul>
            {featuredPosts.slice(0, SITE.featuredPerIndex).map((post) => <Card post={post} enableTransition />)}
          </ul>
        </section>
        {recentPosts.length > 0 && <Hr />}
      </>
    )}

    {recentPosts.length > 0 && (
      <section id="recent-posts" class="pt-8 pb-4">
        <h2 class="text-xs font-medium uppercase tracking-[0.2em] opacity-50 mb-4" style="font-family: system-ui, -apple-system, sans-serif;">Recent Posts</h2>
        <ul>
          {recentPosts.slice(0, SITE.postPerIndex).map((post) => <Card post={post} enableTransition />)}
        </ul>
      </section>
    )}

    {sortedPosts.length > SITE.postPerIndex && (
      <div class="my-8 text-center">
        <a
          href="/posts"
          class="inline-flex items-center gap-1 text-accent-link decoration-dashed underline-offset-4 hover:underline font-medium"
                 >
          All Posts
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
        </a>
      </div>
    )}

  </main>
  <Footer />
</Layout>
