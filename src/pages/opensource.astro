---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Hr from "@/components/Hr.astro";

interface Project {
  name: string;
  description: string;
  github: string;
  language?: string;
  languageColor?: string;
  stars?: string;
}

const projects: Project[] = [
  {
    name: "Asidely/Asidely.app",
    description: "Your side AI helper, anywhere — a Mac application providing intelligent, context-aware assistance.",
    github: "https://github.com/Asidely/Asidely.app",
    language: "Swift",
    languageColor: "#F05138",
  },
  {
    name: "bvsbharat/open-agent-sdks",
    description: "Multi-language SDKs for constructing voice AI agents.",
    github: "https://github.com/bvsbharat/open-agent-sdks",
    language: "TypeScript",
    languageColor: "#3178C6",
  },
  {
    name: "bvsbharat/Sleek",
    description: "Enterprise voice AI agent platform for Mac — a CLI-first approach to building and deploying voice agents.",
    github: "https://github.com/bvsbharat/Sleek",
    language: "Swift",
    languageColor: "#F05138",
  },
  {
    name: "bvsbharat/10xDev",
    description: "AI agents focused on code generation and debugging workflows.",
    github: "https://github.com/bvsbharat/10xDev",
    language: "TypeScript",
    languageColor: "#3178C6",
  },
  {
    name: "bvsbharat/gemini-5head",
    description: "Helps users navigate complex websites like IRS.gov efficiently using Gemini.",
    github: "https://github.com/bvsbharat/gemini-5head",
    language: "TypeScript",
    languageColor: "#3178C6",
  },
  {
    name: "bvsbharat/ClaimReimagined",
    description: "Insurance claims processing platform powered by AI — automating intake, triage, and routing.",
    github: "https://github.com/bvsbharat/ClaimReimagined",
    language: "Python",
    languageColor: "#3572A5",
  },
  {
    name: "bvsbharat/homebrew-superagents",
    description: "Mac command center with agent orchestration capabilities — manage and coordinate multiple AI agents.",
    github: "https://github.com/bvsbharat/homebrew-superagents",
    language: "Swift",
    languageColor: "#F05138",
  },
  {
    name: "bvsbharat/AgentOS",
    description: "Operating system layer for AI agents — providing infrastructure for agent lifecycle management.",
    github: "https://github.com/bvsbharat/AgentOS",
    language: "TypeScript",
    languageColor: "#3178C6",
  },
  {
    name: "bvsbharat/bolt.new",
    description: "Fork and contributions to the bolt.new full-stack web development agent.",
    github: "https://github.com/bvsbharat/bolt.new",
    language: "TypeScript",
    languageColor: "#3178C6",
  },
  {
    name: "bvsbharat/reunite",
    description: "AI-powered missing person identification and recovery system.",
    github: "https://github.com/bvsbharat/reunite",
    language: "Python",
    languageColor: "#3572A5",
  },
];
---

<Layout title="Open Source" description="Open source projects by Bharat BVS — voice AI, agents, macOS apps, and more.">
  <Header />
  <main id="main-content" class="mx-auto w-full flex-1 px-6 pb-12" style="max-width:1020px">
    <section class="mt-8">
      <h1 class="text-2xl font-semibold tracking-wide sm:text-3xl">
        Open Source
      </h1>
      <p class="mt-2 opacity-70">
        Projects I've built and open-sourced — voice AI, agents, macOS apps, and developer tools.
      </p>
    </section>

    <Hr />

    <section class="pt-4 pb-4">
      <ul class="divide-y divide-border">
        {projects.map((project) => (
          <li class="py-5 transition-colors hover:bg-muted/20 -mx-6 px-6 rounded">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1 min-w-0">
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1.5 text-accent font-semibold hover:underline underline-offset-4"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="opacity-50 shrink-0"><path d="m18 13 6-6-6-6"/><path d="M2 5v4a7 7 0 0 0 7 7h15"/></svg>
                  {project.name}
                </a>
                <p class="mt-1 text-sm opacity-70 line-clamp-2">{project.description}</p>
                <div class="mt-2 flex items-center gap-4 text-xs opacity-60">
                  {project.language && (
                    <span class="inline-flex items-center gap-1.5">
                      <span class="inline-block w-3 h-3 rounded-full" style={`background-color: ${project.languageColor}`}></span>
                      {project.language}
                    </span>
                  )}
                </div>
              </div>
            </div>
          </li>
        ))}
      </ul>

      <div class="mt-8 text-center">
        <a
          href="https://github.com/bvsbharat"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-md border border-border px-4 py-2 text-sm font-medium transition-colors hover:bg-muted/40 hover:text-accent"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
          View all repositories on GitHub
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
